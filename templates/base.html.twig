<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Let's Explore Symfony 4{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    {% block stylesheets %}{% endblock %}
</head>

<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="">
                        <a class="nav-link" href="{{ path('welcome') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('recipe_list') }}">All Recipes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('recipe_ingredient') }}">Add Recipe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ingredient') }}">Add Ingredient</a>
                    </li>
                    {% if app.user == null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('register') }}">Registration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Login</a>
                        </li>
                    {% elseif app.user.username != null %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Hi {{ app.user.username }}</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container main">
    {% include 'flash_messages.html.twig' %}

    {% block body %}{% endblock %}
</main>

{% block javascripts %}{% endblock %}
</body>
</html>